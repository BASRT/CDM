@model List<ConcremoteDeviceManagment.Models.Device_Pricelist>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th class="table-row">
            @Html.DisplayName("BAS artikelnummer")
        </th>
        <th class="table-row">
            @Html.DisplayName("Beschrijving")
        </th>
        <th class="table-row">
