@model IEnumerable<ConcremoteDeviceManagment.Models.DeviceStatus>

@{
    ViewBag.Title = "DeviceLijst";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Devices</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Serie Nummer")
        </th>
        <th>
            @Html.DisplayName("Device Naam")
        </th>
        <th>
            @Html.DisplayName("In Gebruik")
        </th>
        <th>
            @Html.DisplayName("Config Versie")
        </th>
        <th>
            @Html.DisplayName("Config Datum")
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ConcremoteDevice.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceConfig.DeviceType.name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ConcremoteDevice.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceConfig.VersionNr)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.DeviceConfig.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Device_Statustypes.name)
        </td>
        <td>
            <button onclick="location.href='@Url.Action("Edit", "Concremote", new { id=item.id})';return false;" class="btn btn-primary">Edit</button>
            <button onclick="location.href='@Url.Action("Details", "Concremote", new { id=item.id})';return false;" class="btn btn-info">Details</button>
            <button onclick="location.href='@Url.Action("Delete", "Concremote", new { id=item.id})';return false;" class="btn btn-danger">Delete</button>
        </td>
    </tr>
}

</table>
