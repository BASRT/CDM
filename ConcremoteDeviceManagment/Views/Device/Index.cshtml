@model IEnumerable<ConcremoteDeviceManagment.Models.Pricelist>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("BAS Artikelnummer")
        </th>
        <th>
            @Html.DisplayName("Leverancier Artikelnummer")
        </th>
        <th>
            @Html.DisplayName("Prijs")
        </th>
        <th>
            @Html.DisplayName("Beschrijving")
        </th>
        <th>
            @Html.DisplayName("Actief")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      <td>
            @Html.DisplayFor(modelItem => item.bas_art_nr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.art_lev_nr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            <button onclick="location.href='@Url.Action("Edit", "Device", new { id=item.Price_id})';return false;" class="btn btn-primary">Edit</button>
            <button onclick="location.href='@Url.Action("Details", "Device", new { id=item.Price_id})';return false;" class="btn btn-info">Details</button>
            <button onclick="location.href='@Url.Action("Delete", "Device", new { id=item.Price_id})';return false;" class="btn btn-danger">Delete</button>
        </td>
    </tr>
}

</table>
