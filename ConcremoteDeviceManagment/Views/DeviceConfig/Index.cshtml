@model IEnumerable<ConcremoteDeviceManagment.Models.DeviceConfig>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Device</h2>
@using (Html.BeginForm("Index", "DeviceConfig", FormMethod.Get))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("ID_DEBUG")
            <br />
            <small>Delete with deployment</small>
        </th>
        <th>
            @Html.DisplayName("Device Type")
        </th>
        <th>
            @Html.DisplayName("Prijs ID")
        </th>
        <th>
            @Html.DisplayName("Aantal")
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
    <td>
        @Html.DisplayFor(modelItem => item.Device_config_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.device_type_id)
    </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pricelist.Price)
        </td>
    <td>
        @Html.DisplayFor(modelItem => item.amount)
    </td>
        <td>
            <button onclick="location.href='@Url.Action("Edit", "DeviceConfig", new { id=item.Device_config_id})';return false;" class="btn btn-primary">Edit</button>
            <button onclick="location.href='@Url.Action("Details", "DeviceConfig", new {id=item.Device_config_id})';return false;" class="btn btn-info">Details</button>
            <button onclick="location.href='@Url.Action("Delete", "DeviceConfig", new {id=item.Device_config_id})';return false;" class="btn btn-danger">Delete</button>
        </td>
    </tr>
}
</table>
