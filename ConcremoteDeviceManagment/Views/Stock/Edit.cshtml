        @Html.Label("Leverancier artikelnummer", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Pricelist.art_lev_nr, new { htmlAttributes = new { @class = "form-control" } })
