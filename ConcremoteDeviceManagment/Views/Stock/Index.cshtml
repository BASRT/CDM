@model IEnumerable<ConcremoteDeviceManagment.Models.Stock>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inventory</h2>
@using (Html.BeginForm("Index", "Stock", FormMethod.Get))
{
<p>
    <b>CMI: </b>@Html.TextBox("StockCMI")
    <input type="submit" value="Zoek CMI" class="btn" />
    <b>Onderdeel:</b> @Html.TextBox("searchString")
    <input type="submit" value="Zoek onderdeel" class="btn" /> |
    
    <button onclick="location.href='@Url.Action("Create", "Stock")';return false;" class="btn btn-primary">Create New</button>
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("BAS artikelnummer")
        </th>       
        <th>
            @Html.DisplayName("Beschrijving artikel")
        </th>
        <th>
            @Html.DisplayName("Huidige voorraad")
        </th>
        <th>
            @Html.DisplayName("Minimale voorraad")
        </th>
        <th>
            @Html.DisplayName("Maximale voorraad")
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            <i>@Html.DisplayFor(modelItem => item.Pricelist.bas_art_nr)</i>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pricelist.description)
        </td>
        <td>
            @Convert.ToDecimal(item.stock_amount).ToString("#,##")
        </td>
        <td>
            @Convert.ToDecimal(item.min_stock).ToString("#,##")
        </td>
        <td>
            @Convert.ToDecimal(item.max_stock).ToString("#,##")
        </td>
        <td>
            <button onclick="location.href='@Url.Action("Edit", "Stock", new { id=item.Price_id})';return false;" class="btn btn-primary">Edit</button>
            <button onclick="location.href='@Url.Action("Details", "Stock", new { id=item.Price_id})';return false;" class="btn btn-info">Details</button>
            <button onclick="location.href='@Url.Action("Delete", "Stock", new { id=item.Price_id})';return false;" class="btn btn-danger">Delete</button>
        </td>
    </tr>

}

</table>
